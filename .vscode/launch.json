{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "attach",
      "name": "Cerberus Debug",
      "port": 9229,
      "restart": true,
      "address": "localhost",
      "timeout": 60000,
      "localRoot": "${workspaceFolder}",
      "remoteRoot": "/app",
      "sourceMapPathOverrides": {
        "/app/*": "${workspaceFolder}/*"
      }
    }
  ]
}